<h1>ManagerTasks#edit</h1>

<%= form_for @manager_task do |f| %>
<%= f.label :name, "Enter a name" %>
<%= f.text_field :name %>
<%= f.label :description, "Enter a description" %>
<%= f.text_field :description %>
<%= f.label :due_date, "Enter a date" %>
<%= f.text_field :due_date %>
<%= f.submit %>
<% end %>



